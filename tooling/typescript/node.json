{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build", "dist", ".next", ".expo"],
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true
  }
}
